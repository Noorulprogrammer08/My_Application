<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/spacing_15"
    android:layout_margin="@dimen/spacing_2"
    app:cardBackgroundColor="@color/white"
    app:cardElevation="@dimen/spacing_2"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_card_logo"
            android:layout_width="@dimen/spacing_50"
            android:layout_height="@dimen/spacing_50"
            android:layout_margin-left="20dp"
            android:src="@drawable/ic_logo"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <CheckBox
            android:id="@+id/cb_tasks"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_308"
            android:layout_marginTop="@dimen/spacing_8"
            app:circularflow_defaultRadius="@dimen/spacing_10"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_role"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RoR developer"
            android:textColor="@color/black"
            android:textSize="@dimen/spacing_22"
            android:layout_marginLeft="@dimen/spacing_12"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_card_logo"/>
        <TextView
            android:id="@+id/tv_experience"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 years experinece"
            android:textColor="@color/black"
            android:layout_marginLeft="@dimen/spacing_12"
            android:textSize="@dimen/font_18"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_role"/>
        <TextView
            android:id="@+id/tv_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="karur"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            android:layout_marginLeft="@dimen/spacing_12"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_experience"/>
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1234567890"
            android:textColor="@color/black"
            android:textSize="@dimen/font_18"
            android:layout_marginLeft="@dimen/spacing_12"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_location"/>

        <TextView
            android:id="@+id/tv_greetings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="We are looking for Ror developer"
            android:textSize="@dimen/font_16"
            android:layout_marginLeft="@dimen/spacing_12"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginTop="@dimen/spacing_10"
            app:layout_constraintTop_toBottomOf="@+id/tv_phone"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>